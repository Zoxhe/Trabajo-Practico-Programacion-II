<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= infoUsuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= infoUsuario.nombreDeUsuario %>
						<a href="profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= infoUsuario.email %></li>
						<li>Productos <%=productos.length %></li>
						<li>200 seguidores</li>
						<li>300 comentarios</li><!--Â¿hay que poner la cantidad de comentarios que tienen entre todas las publis?-->
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detalle/<%= productos[i].id %>"><!--revisar a donde tienen q ir-->
							<figure class="product-box_image">
								<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombreDelProducto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombreDelProducto %></h2>
								<h3>$<%= productos[i].precio %></h3>
								<p><%= productos[i].descripcion%></p>
								<p>Comentarios:<%= productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<%- include('./partials/footer') %>
</body>	
</html>