<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>
<body>

<!-- Datos del usuario -->
	<% if (locals.usuarioLogueado!= undefined) { %>
		<%- include('./partials/headerLogueado') %>
		<% if ((locals.usuarioLogueado.Id == infoUsuario.Id)) { %><!--si esta logueado y el perfil es suyo-->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="<%=locals.usuarioLogueado.FotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title"><%= locals.usuarioLogueado.Nombre %></h1>
						</div>
						<div>
							<ul class="">
								<li><%= locals.usuarioLogueado.Email %></li>
								<li>Productos: <%=infoProducto.length %></li>
							</ul>
						</div>
					</div>
				</div>
			</section>
	
		<% } else { %><!--si esta logueado y el perfil no es suyo-->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="<%=infoUsuario.FotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title"><%= infoUsuario.Nombre %></h1>
						</div>
						<div>
							<ul class="">
								<li><%= infoUsuario.Email %></li>
								<li>Productos: <%=infoProducto.length %></li>
							</ul>
						</div>
					</div>
				</div>
			</section>
	  <% } %> 
	  
    <% } else { %>
        <%- include('./partials/headerDeslogueado') %><!--Si no esta logueado le apareceran asi las cosas-->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="<%=infoUsuario.FotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"><%= infoUsuario.Nombre %>
							<a href="profile-edit"></a>
						</h1>
					</div>
					<div>
						<ul class="">
							<li><%= infoUsuario.Email %></li>
							<li>Productos: <%=infoProducto.length %></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
  <% } %> 		
<!-- /Datos del usuario -->



<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
		<!-- Show mis productos -->
		<% if (infoProducto.length == 0) { %>
				<div class="noHayResultados">
					<h2>Oops.. Aun no hay ningun auto cargado</h2>
				</div>

		<% } else { %>
			<% for (let i = 0; i < infoProducto.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detalle/<%= infoProducto[i].ID %>">

							<figure class="product-box_image">
								<img src="<%= infoProducto[i].Imagen %>" alt="<%= infoProducto[i].NombreDelProducto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= infoProducto[i].NombreDelProducto %></h2>
								<h3>$<%= infoProducto[i].Precio %></h3>
								<p><%= infoProducto[i].DescripciÃ³n%></p>
								<!--<p>Comentarios:<%= //infoProducto.product[i].comentarios.length %></p>-->
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		<% } %>
		</div>
	</div>
<!-- /Mis productos -->


	<%- include('./partials/footer') %>
</body>	
</html>