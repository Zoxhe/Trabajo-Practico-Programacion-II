<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerDeslogueado') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < autos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="productos/detalle/<%= autos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= autos[i].foto %>" alt="<%= autos[i].marca %>">
							</figure>
							
							<article class="product-box_data">
								<h2><%= autos[i].marca %> - <%= autos[i].modelo %></h2>
								<p>A침o: <%= autos[i].anio %> - Color: <%= autos[i].color %> - Precio: $<%= autos[i].precio %></p>
								<p>Comentarios: <%= autos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- M치s comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">M치s comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
		</div>
	</div>
	<!-- /M치s comentados -->

	<%- include('./partials/footer') %>
</body>	
</html>