
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerDeslogueado') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/BANNER.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < autos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="productos/detalle/<%= autos[i].ID %>">
							<figure class="product-box_image">
								<img src="<%= autos[i].Imagen %>" alt="<%= autos[i].NombreDelProducto %>">
							</figure>
							
							<article class="product-box_data">
								<h2><%= autos[i].NombreDelProducto %></h2>
								<h3>$<%= autos[i].Precio %></h3>
								<p><%= autos[i].Descripción %> - Fecha de Carga: <%= autos[i].FechaDeCarga %></p>
								<a href="/users/detalle/<%= autos[i].user.ID %>"><%= autos[i].user.Nombre%></a></p>
								<!-- 
									<p>Comentarios:<%= //autos[i].Comentarios.length %></p>
								 -->
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<h2 class="products-title">Más comentados</h2>
		<div class="row">
				
				<% for (let i = 0; i < autos.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="productos/detalle/<%= autos[i].ID %>">
								<figure class="product-box_image">
									<img src="<%= autos[i].Imagen %>" alt="<%= autos[i].NombreDelProducto %>">
								</figure>
								
								<article class="product-box_data">
									<h2><%= autos[i].NombreDelProducto %></h2>
									<h3>$<%= autos[i].Precio %></h3>
									<p><%= autos[i].Descripción %> - Fecha de Carga: <%= autos[i].FechaDeCarga %></p>
									<!--<p>Comentarios: <%= //autos[i].Comentarios.length %></p>-->
								</article>
							</a>
						</section>
					</div>
				<% } %>
			
		</div>
	</div>
	<!-- /Más comentados -->

	<%- include('./partials/footer') %>
</body>	
</html>